{
  "manifest_version": 3,
  "name": "AdBlock Lite",
  "version": "1.0",
  "description": "Bloquea anuncios intrusivos y enlaces maliciosos, mostrando alertas para proteger la navegaci√≥n del usuario.",
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "webRequest",
    "webRequestBlocking"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}

